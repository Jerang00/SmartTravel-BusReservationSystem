<%- include('partials/navbar') %>
    <!-- Hero Section -->
    <header class="hero">
        <div class="hero-content">
            <h1>Travel in Comfort & Style</h1>
            <p>Book your bus tickets with ease and enjoy a seamless journey</p>
            
            <div class="search-form">
                <div class="form-group">
                    <i class="fas fa-map-marker-alt"></i>
                    <input type="text" placeholder="From">
                </div>
                <div class="form-group">
                    <i class="fas fa-map-marker-alt"></i>
                    <input type="text" placeholder="To">
                </div>
                <div class="form-group">
                    <i class="fas fa-calendar"></i>
                    <input type="date">
                </div>
                <button class="search-btn">Search Buses</button>
            </div>
        </div>
    </header>

    <!-- Popular Routes -->
    <section class="popular-routes">
        <h2>Popular Routes</h2>
        <div class="routes-grid">
            <div class="route-card">
                <div class="route-info">
                    <h3>Bangalore → Chennai</h3>
                    <p>Starting from ₹800</p>
                    <span class="duration">Duration: 6h 30m</span>
                </div>
                <button class="book-now">Book Now</button>
            </div>
            <div class="route-card">
                <div class="route-info">
                    <h3>Mumbai → Pune</h3>
                    <p>Starting from ₹500</p>
                    <span class="duration">Duration: 3h 30m</span>
                </div>
                <button class="book-now">Book Now</button>
            </div>
            <div class="route-card">
                <div class="route-info">
                    <h3>Delhi → Jaipur</h3>
                    <p>Starting from ₹600</p>
                    <span class="duration">Duration: 5h 00m</span>
                </div>
                <button class="book-now">Book Now</button>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials">
        <h2>What Our Customers Say</h2>
        <div class="testimonials-grid">
            <div class="testimonial-card">
                <img src="https://randomuser.me/api/portraits/men/1.jpg" alt="User">
                <p>"Excellent service! The booking process was smooth and the journey was comfortable."</p>
                <h4>John Doe</h4>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
            </div>
            <div class="testimonial-card">
                <img src="https://randomuser.me/api/portraits/women/1.jpg" alt="User">
                <p>"Very professional and punctual service. Will definitely use again!"</p>
                <h4>Jane Smith</h4>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <h2>Ready to Start Your Journey?</h2>
        <p>Book your bus tickets now and travel with comfort</p>
        <button class="cta-button">Book Your Bus Now!</button>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>BusGo</h3>
                <p>Your trusted partner for comfortable and safe bus travel.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Terms & Conditions</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">FAQs</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p>
                    <i class="fas fa-phone"></i> +1 234 567 890<br>
                    <i class="fas fa-envelope"></i> support@busgo.com<br>
                    <i class="fas fa-map-marker-alt"></i> 123 Travel Street, City
                </p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 BusGo. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>